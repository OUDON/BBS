%header.navbar.navbar-fixed-top.navbar-inverse
  .container
    = link_to 'BBS', root_path, class: 'navbar-brand', id: 'logo'
    %nav
      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li.nav-item
            %span.navbar-text Logged in as #{ current_user.name }
          %li.nav-item= link_to 'Settings', edit_user_path(current_user)
          %li.nav-item= link_to 'Log out', logout_path, method: :delete
        - else
          %li= link_to 'Sgin up', signup_path
          %li= link_to 'Log in', login_path
